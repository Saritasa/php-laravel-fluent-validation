{
    "name": "saritasa/laravel-fluent-validation",
    "type": "library",
    "description": "Set of fluent builders for Laravel request validation rules",
    "keywords": ["laravel", "validation", "fluent"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Populov",
            "email": "sergey@saritasa.com"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "illuminate/database": "^6.0 || ^7.0 || ^8.0",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0",
        "illuminate/validation": "^6.0 || ^7.0 || ^8.0",
        "saritasa/php-common": "^1.0",
        "propaganistas/laravel-phone": "^4.0 || ^5.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4" : {
            "Saritasa\\Laravel\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "Saritasa\\Laravel\\Validation\\Tests\\": "tests/" }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laravel": {
            "providers": [
                "Saritasa\\Laravel\\Validation\\FluentValidationServiceProvider"
            ]
        }
    }
}
